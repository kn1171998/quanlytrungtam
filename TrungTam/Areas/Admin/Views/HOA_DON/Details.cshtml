
@{
    ViewBag.Title = "Details";
    var id = Session["ID"];
    if (id.ToString().First().Equals('9'))
    {
        Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    }
    else
    {
        Layout = "~/Areas/Admin/Views/Shared/_layout_vanphong.cshtml";
    }
    var chitiet = (List<TrungTam.Areas.Admin.Abstracts.chitietluong>)ViewBag.chitiet;
    var chitiet_ngoaigio = (List<TrungTam.Areas.Admin.Abstracts.chitietluong>)ViewBag.chitiet_ngoaigio;
    var stt = 0;
}
    <style>
        table.dataTable thead .sorting:after,
        table.dataTable thead .sorting:before,
        table.dataTable thead .sorting_asc:after,
        table.dataTable thead .sorting_asc:before,
        table.dataTable thead .sorting_asc_disabled:after,
        table.dataTable thead .sorting_asc_disabled:before,
        table.dataTable thead .sorting_desc:after,
        table.dataTable thead .sorting_desc:before,
        table.dataTable thead .sorting_desc_disabled:after,
        table.dataTable thead .sorting_desc_disabled:before {
            bottom: .5em;
        }
    </style>
<h2 class="Title_Content">Chi tiết lương của tháng</h2>
<div class="card-body">
    <table class="table table-bordered table-hover myTable"  id="dtVerticalScrollExample">
        <thead class="text-white text-center">
            <tr class="bg-primary">
                <th>STT</th>
                <th>Tên lớp</th>
                <th>Tên Loại</th>
                <th>Thời gian</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody id="tableDanhSach" class="text-center">
            @foreach (var item in chitiet)
            {
                stt += 1;
            <tr>
                <td>
                    @stt
                </td>
                <td>
                    @item.TEN_LOP
                </td>
                <td>
                    @item.TEN_LOAI
                </td>
                <td>
                    @string.Format("{0:dd/MM/yyyy}", item.THOI_GIAN)
                </td>
                <td>
                    @string.Format("{0:0,0}", item.LUONG)
                </td>
            </tr>
            }
            @foreach (var item in chitiet_ngoaigio)
            {
                stt += 1;
                <tr>
                    <td>
                        @stt
                    </td>
                    <td>
                    </td>
                    <td>
                        @item.TEN_LOAI
                    </td>
                    <td>
                        @string.Format("{0:dd/MM/yyyy}", item.THOI_GIAN)
                    </td>
                    <td>
                        @string.Format("{0:0,0}", item.LUONG)
                    </td>
                </tr>
             }
        </tbody>
    </table>
    <center>
        <a href="~/Admin/HOA_DON/Index" class="btn btn-warning">Quay lại</a>
    </center>
</div>
<script>
    $(document).ready(function () {
        $('#dtVerticalScrollExample').DataTable({
            //"scrollY": "200px",
            //"scrollCollapse": true,
        });
        //$('.dataTables_length').addClass('bs-select');
    });
</script>